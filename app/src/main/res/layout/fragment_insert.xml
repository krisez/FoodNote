<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/insert_cold_freeze"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/milk"
            android:paddingTop="16dp"
            android:gravity="center"
            android:text="冷冻冷藏"
            android:textSize="24sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black" />

        <TextView
            android:id="@+id/insert_meat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/meat"
            android:paddingTop="16dp"
            android:gravity="center"
            android:text="肉类生鲜"
            android:textSize="24sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black" />

        <TextView
            android:id="@+id/insert_tiaoliao"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/tiaoliao"
            android:paddingTop="16dp"
            android:gravity="center"
            android:text="调料酱料"
            android:textSize="24sp" />

    </LinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/insert_dry"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ganhuo"
            android:paddingTop="16dp"
            android:gravity="center"
            android:text="粮油干货"
            android:textSize="24sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black" />

        <TextView
            android:id="@+id/insert_vegetables"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/shucai"
            android:paddingTop="16dp"
            android:gravity="center"
            android:text="蔬菜水果"
            android:textSize="24sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black" />

        <TextView
            android:id="@+id/insert_more"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/more"
            android:paddingTop="16dp"
            android:gravity="center"
            android:text="自定义"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>